{
  "name": "mittens-api",
  "description": "GitHub notifications",
  "license": "UNLICENSED",
  "private": true,
  "author": {
    "name": "Ali Zahid",
    "email": "ali.zahid@live.com",
    "url": "https://designplox.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alizahid/mittens-api"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "dev": "nodemon --exec 'node -r dotenv/config' index.js",
    "lint": "xo",
    "precommit": "lint-staged",
    "start": "node -r newrelic index.js",
    "test": "npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava"
  },
  "dependencies": {
    "cors": "^2.8.4",
    "fastify": "^1.6.0",
    "jsonwebtoken": "^8.3.0",
    "lodash.get": "^4.4.2",
    "moment": "^2.22.2",
    "mongoose": "^5.1.5",
    "newrelic": "^4.1.5",
    "node-fetch": "^2.1.2"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "codecov": "^3.0.2",
    "cross-env": "^5.2.0",
    "dotenv": "^6.0.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "latest",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "nyc": "^12.0.2",
    "prettier": "^1.13.5",
    "xo": "latest"
  },
  "engines": {
    "node": "10.3.0",
    "npm": "6.1.0",
    "yarn": "1.7.0"
  },
  "ava": {
    "failFast": true,
    "verbose": true
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote --no-semi --trailing-comma none",
      "git add"
    ]
  },
  "main": "index.js",
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "lcov",
      "html",
      "text"
    ]
  },
  "xo": {
    "extends": "prettier",
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "none",
          "semi": false
        }
      ],
      "max-len": [
        "error",
        {
          "code": 80,
          "ignoreUrls": true
        }
      ],
      "capitalized-comments": "off",
      "camelcase": "off",
      "no-warning-comments": "off"
    },
    "space": true,
    "semicolon": false
  }
}
