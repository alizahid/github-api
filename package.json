{
  "name": "mittens-api",
  "description": "GitHub notifications",
  "author": "Ali Zahid <ali.zahid@live.com> (https://designplox.com/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/alizahid/mittens-api"
  },
  "license": "MIT",
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "dev": "nodemon --exec 'node -r dotenv/config' index.js",
    "lint": "xo ",
    "precommit": "lint-staged",
    "start": "node -r newrelic index.js",
    "test": "npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava"
  },
  "dependencies": {
    "cors": "^2.8.4",
    "fastify": "^1.0.0-rc.2",
    "jsonwebtoken": "^8.1.1",
    "lodash.get": "^4.4.2",
    "moment": "^2.20.1",
    "mongoose": "^5.0.7",
    "newrelic": "^2.8.0",
    "node-fetch": "^2.0.0"
  },
  "devDependencies": {
    "auto-bind": "^1.2.0",
    "ava": "^0.25.0",
    "codecov": "^3.0.0",
    "cross-env": "^5.1.3",
    "dotenv": "^5.0.0",
    "eslint": "^4.18.1",
    "eslint-config-prettier": "latest",
    "eslint-plugin-prettier": "latest",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "nyc": "^11.4.1",
    "prettier": "^1.10.2",
    "xo": "latest"
  },
  "engines": {
    "node": "9.5.0"
  },
  "ava": {
    "failFast": true,
    "verbose": true
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote --no-semi --trailing-comma none",
      "git add"
    ]
  },
  "main": "index.js",
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "lcov",
      "html",
      "text"
    ]
  },
  "xo": {
    "extends": "prettier",
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "none",
          "semi": false
        }
      ],
      "max-len": [
        "error",
        {
          "code": 80,
          "ignoreUrls": true
        }
      ],
      "capitalized-comments": "off",
      "camelcase": "off",
      "no-warning-comments": "off"
    },
    "space": true,
    "semicolon": false
  }
}
